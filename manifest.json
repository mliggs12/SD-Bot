{
  "manifest_version": 3,
  "name": "SD Bot",
  "version": "1.5.1",
  "description": "Bot for automating various service desk functions",
  "icons": {
    "128": "images/icon-128.png"
  },
  "permissions": [
    "sidePanel",
    "storage",
    "tabs"
  ],
  "action": {},
  "background": {
    "service_worker": "dist/background.js"
  },
  "side_panel": {
    "default_path": "dist/sidepanel/sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["https://max.niceincontact.com/*"],
      "js": ["dist/content/ringcentral.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://support.houseloan.com/*"],
      "js": ["dist/content/freshservice.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://max.niceincontact.com/*",
    "https://support.houseloan.com/*"
  ]
}